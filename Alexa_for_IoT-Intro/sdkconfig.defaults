#
# Serial flasher config
#
CONFIG_ESPTOOLPY_BAUD_921600B=y
CONFIG_ESPTOOLPY_BAUD=921600
CONFIG_ESPTOOLPY_FLASHMODE_QIO=y
CONFIG_ESPTOOLPY_FLASHMODE="dio"
CONFIG_ESPTOOLPY_FLASHFREQ_80M=y
CONFIG_ESPTOOLPY_FLASHFREQ="80m"
CONFIG_ESPTOOLPY_FLASHSIZE_16MB=y
CONFIG_ESPTOOLPY_FLASHSIZE="16MB"
CONFIG_ESPTOOLPY_FLASHSIZE_DETECT=y

#
# Partition Table
#
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"
CONFIG_PARTITION_TABLE_FILENAME="partitions.csv"

#
# Voice Assistant Configurations
#
CONFIG_ALEXA_PRODUCT_ID="esp_alexa_open"

#
# Compiler options
#
CONFIG_COMPILER_OPTIMIZATION_LEVEL_RELEASE=y

#
# ESP32-specific
#
CONFIG_ESP32_DEFAULT_CPU_FREQ_240=y
CONFIG_ESP32_DEFAULT_CPU_FREQ_MHZ=240
CONFIG_ESP32_SPIRAM_SUPPORT=y

#
# SPI RAM config
#
CONFIG_SPIRAM_BOOT_INIT=y
CONFIG_SPIRAM_USE_MALLOC=y
CONFIG_SPIRAM_SPEED_80M=y
CONFIG_SPIRAM_MEMTEST=y
CONFIG_SPIRAM_CACHE_WORKAROUND=y
CONFIG_SPIRAM_MALLOC_ALWAYSINTERNAL=8190
CONFIG_SPIRAM_TRY_ALLOCATE_WIFI_LWIP=y
CONFIG_SPIRAM_MALLOC_RESERVE_INTERNAL=32768
CONFIG_SPIRAM_ALLOW_STACK_EXTERNAL_MEMORY=y
CONFIG_SPIRAM_BANKSWITCH_ENABLE=n

#
# ESP Specific
#
CONFIG_ESP_SYSTEM_EVENT_TASK_STACK_SIZE=4096
CONFIG_ESP_MAIN_TASK_STACK_SIZE=6144
CONFIG_ESP_TIMER_TASK_STACK_SIZE=4096
CONFIG_ESP32_PANIC_GDBSTUB=y
CONFIG_ESP_TASK_WDT_PANIC=y
CONFIG_SPIRAM_ALLOW_BSS_SEG_EXTERNAL_MEMORY=y

#
# AWS-IoT
#
CONFIG_AWS_IOT_SDK=y
CONFIG_AWS_IOT_MQTT_TX_BUF_LEN=8704
CONFIG_AWS_IOT_MQTT_RX_BUF_LEN=8704
CONFIG_AWS_IOT_MQTT_NUM_SUBSCRIBE_HANDLERS=10
CONFIG_AWS_IOT_SHADOW_MAX_SIZE_OF_THING_NAME=40

#
# Wi-Fi
#
CONFIG_ESP32_WIFI_STATIC_TX_BUFFER_NUM=32
CONFIG_ESP32_WIFI_STATIC_TX_BUFFER=y
CONFIG_ESP32_WIFI_TX_BUFFER_TYPE=0
CONFIG_ESP32_WIFI_STATIC_RX_BUFFER_NUM=10
CONFIG_ESP32_WIFI_DYNAMIC_RX_BUFFER_NUM=32

#
# Bluetooth
#
CONFIG_BT_ENABLED=y

#
# Bluetooth controller
#
CONFIG_BTDM_CTRL_MODE_BLE_ONLY=y
CONFIG_BT_STACK_NO_LOG=y

#
# ESP HTTP client
#
CONFIG_ESP_HTTP_CLIENT_ENABLE_HTTPS=y

#
# FreeRTOS
#
CONFIG_FREERTOS_IDLE_TASK_STACKSIZE=1024
CONFIG_FREERTOS_SUPPORT_STATIC_ALLOCATION=y
CONFIG_FREERTOS_TIMER_TASK_STACK_DEPTH=6144
CONFIG_FREERTOS_USE_TRACE_FACILITY=y
CONFIG_FREERTOS_WATCHPOINT_END_OF_STACK=y
CONFIG_FREERTOS_CHECK_MUTEX_GIVEN_BY_OWNER=n

#
# Log output
#
CONFIG_LOG_DEFAULT_LEVEL_INFO=y
CONFIG_LOG_DEFAULT_LEVEL=3

#
# LWIP
#
CONFIG_LWIP_LOCAL_HOSTNAME="Core2ForAWS"
CONFIG_LWIP_MAX_SOCKETS=9
CONFIG_LWIP_USE_ONLY_LWIP_SELECT=y
CONFIG_LWIP_ETHARP_TRUST_IP_MAC=y
CONFIG_LWIP_DHCP_MAX_NTP_SERVERS=3

#
# TCP
#
CONFIG_LWIP_MAX_ACTIVE_TCP=8
CONFIG_LWIP_MAX_LISTENING_TCP=8
CONFIG_LWIP_TCP_SND_BUF_DEFAULT=14360
CONFIG_LWIP_TCP_WND_DEFAULT=14360
CONFIG_LWIP_TCP_RECVMBOX_SIZE=12

#
# PThreads
#
CONFIG_PTHREAD_TASK_PRIO_DEFAULT=4
CONFIG_PTHREAD_TASK_STACK_SIZE_DEFAULT=16000

#
# mbedTLS
#
# CONFIG_MBEDTLS_HAVE_TIME=y
# CONFIG_MBEDTLS_HAVE_TIME_DATE=y
CONFIG_MBEDTLS_EXTERNAL_MEM_ALLOC=y
CONFIG_MBEDTLS_HARDWARE_AES=n

#
# Core2 for AWS hardware enable
#
CONFIG_SOFTWARE_ILI9342C_SUPPORT=y
CONFIG_SOFTWARE_FT6336U_SUPPORT=y
CONFIG_SOFTWARE_SK6812_SUPPORT=y
CONFIG_SOFTWARE_ATECC608_SUPPORT=y
CONFIG_SOFTWARE_BUTTON_SUPPORT=
CONFIG_SOFTWARE_MPU6886_SUPPORT=
CONFIG_SOFTWARE_SPEAKER_SUPPORT=
CONFIG_SOFTWARE_MIC_SUPPORT=
CONFIG_SOFTWARE_RTC_SUPPORT=
CONFIG_SOFTWARE_SDCARD_SUPPORT=
CONFIG_SOFTWARE_EXPPORTS_SUPPORT=